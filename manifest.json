{
  "manifest_version": 3,
  "name": "FuckAmazonAPI",
  "version": "1.0.0",
  "description": "Extract product data from Amazon pages",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.de/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.es/*",
    "https://*.amazon.it/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.com.au/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*", "https://*.amazon.co.uk/*", "https://*.amazon.fr/*", "https://*.amazon.de/*", "https://*.amazon.ca/*", "https://*.amazon.es/*", "https://*.amazon.it/*", "https://*.amazon.co.jp/*", "https://*.amazon.com.au/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
} 
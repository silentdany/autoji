{
  "manifest_version": 3,
  "name": "Amazon Data Extractor",
  "description": "Extract product data from Amazon pages",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "downloads"],
  "host_permissions": ["*://*.amazon.com/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
} 